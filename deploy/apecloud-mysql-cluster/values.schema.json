{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "name": {
      "title": "Name",
      "description": "Cluster name.",
      "type": "string",
      "default": "mycluster",
      "maxLength": 16,
      "minLength": 1,
      "pattern": "^[a-z]([-a-z0-9]*[a-z0-9])?$"
    },
    "version": {
      "title": "Version",
      "description": "Cluster version, run \"kbcli cv list\" to see all versions.",
      "type": "string",
      "default": "ac-mysql-8.0.30"
    },
    "mode": {
      "title": "Mode",
      "description": "Cluster topology.",
      "type": "string",
      "default": "standalone",
      "enum": [
        "standalone",
        "replication",
        "raftGroup"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 10
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": "number",
      "default": 1,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": "number",
      "default": 1
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": "number",
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    },
    "monitoringInterval": {
      "title": "Monitoring Interval",
      "description": "The monitoring interval of cluster, 0 is disabled, the unit is second.",
      "type": "integer",
      "default": 0,
      "minimum": 0,
      "maximum": 60
    },
    "terminationPolicy": {
      "title": "Termination Policy",
      "description": "The termination policy of cluster.",
      "type": "string",
      "default": "Delete",
      "enum": [
        "DoNotTerminate",
        "Halt",
        "Delete",
        "WipeOut"
      ]
    },
    "proxyEnabled": {
      "title": "Proxy",
      "description": "Enable proxy or not.",
      "type": "boolean",
      "default": false
    },
    "availabilityPolicy": {
      "title": "Availability Policy",
      "description": "The availability policy of cluster.",
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "node",
        "zone"
      ]
    },
    "tenancy": {
      "title": "Tenancy",
      "description": "The tenancy of cluster.",
      "type": "string",
      "default": "SharedNode",
      "enum": [
        "SharedNode",
        "DedicatedNode"
      ]
    },
    "hostNetworkAccessible": {
      "title": "Host Network Accessible",
      "description": "Specify whether the cluster can be accessed from within the VPC.",
      "type": "boolean",
      "default": false
    },
    "publiclyAccessible": {
      "title": "Publicly Accessible",
      "description": "Specify whether the cluster can be accessed from the public Internet.",
      "type": "boolean",
      "default": false
    }
  }
}
