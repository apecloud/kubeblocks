{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "name": {
      "title": "Name",
      "description": "Cluster name.",
      "type": "string",
      "default": "myflink",
      "maxLength": 16,
      "pattern": "^[a-z]([-a-z0-9]*[a-z0-9])?$"
    },
    "version": {
      "title": "Version",
      "description": "Cluster version, run \"kbcli cv list\" to see all versions.",
      "type": "string",
      "default": "ac-mysql-8.0.30"
    },
    "mode": {
      "title": "Mode",
      "description": "Cluster topology.",
      "type": "string",
      "default": "standalone",
      "enum": [
        "standalone",
        "replication",
        "raftGroup"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 10
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": "number",
      "default": 1,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": "number",
      "default": 1
    },
    "storageSize": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": "number",
      "default": 20,
      "minimum": 20,
      "maximum": 10000
    },
    "terminationPolicy": {
      "title": "Termination Policy",
      "description": "The termination policy of cluster.",
      "type": "string",
      "default": "Delete",
      "enum": [
        "DoNotTerminate",
        "Halt",
        "Delete",
        "WipeOut"
      ]
    },
    "proxyEnabled": {
      "title": "Proxy",
      "description": "Enable proxy or not.",
      "type": "boolean",
      "default": false
    },
    "availablePolicy": {
      "title": "Available Policy",
      "description": "The available policy of cluster.",
      "type": "string",
      "default": "single",
      "enum": [
        "single",
        "zone"
      ]
    },
    "tenancy": {
      "title": "Tenancy",
      "description": "The tenancy of cluster.",
      "type": "string",
      "default": "DedicatedNode",
      "enum": [
        "SharedNode",
        "DedicatedNode"
      ]
    },
    "hostNetworkAccessible": {
      "title": "Host Network Accessible",
      "description": "Specify whether the cluster can be accessed from within the VPC.",
      "type": "boolean",
      "default": true
    },
    "publiclyAccessible": {
      "title": "Publicly Accessible",
      "description": "Specify whether the cluster can be accessed from the public Internet.",
      "type": "boolean",
      "default": false
    },
    "storageEngine": {
      "title": "Storage Engine",
      "description": "The storage engine of cluster.",
      "type": "string",
      "default": "innodb",
      "enum": [
        "innodb",
        "x-engine"
      ]
    }
  }
}
