{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": ["number","string"],
      "default": 1,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": ["number","string"],
      "default": 1,
      "minimum": 0.5,
      "maximum": 1000
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": ["number","string"],
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    },
    "monitoringInterval": {
      "title": "Monitoring Interval",
      "description": "The monitoring interval of cluster, 0 is disabled, the unit is second.",
      "type": "integer",
      "default": 0,
      "minimum": 0,
      "maximum": 60
    },
    "terminationPolicy": {
      "title": "Termination Policy",
      "description": "The termination policy of cluster.",
      "type": "string",
      "default": "Delete",
      "enum": [
        "DoNotTerminate",
        "Halt",
        "Delete",
        "WipeOut"
      ]
    },
    "availabilityPolicy": {
      "title": "Availability Policy",
      "description": "The availability policy of cluster.",
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "node",
        "zone"
      ]
    },
    "tenancy": {
      "title": "Tenancy",
      "description": "The tenancy of cluster.",
      "type": "string",
      "default": "SharedNode",
      "enum": [
        "SharedNode",
        "DedicatedNode"
      ]
    },
    "hostNetworkAccessible": {
      "title": "Host Network Accessible",
      "description": "Specify whether the cluster can be accessed from within the VPC.",
      "type": "boolean",
      "default": false
    },
    "publiclyAccessible": {
      "title": "Publicly Accessible",
      "description": "Specify whether the cluster can be accessed from the public Internet.",
      "type": "boolean",
      "default": false
    }
  }
}
